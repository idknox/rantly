<div class="right-container">
  <h1><%= full_name(@user) %></h1>
  <% unless is_me?(@user) %>
    <% if current_user.following?(@user.id) %>
      <%= link_to "Unfollow", unfollow_path(@user), class: "unfollow-button" %>
    <% else %>
      <%= link_to "Follow", follow_path(@user), class: "follow-button" %>
    <% end %>
  <%= end %>
  <hr>
  <div class="user-profile-info">
    <%= image_tag image_path(@user), alt: 'No Image' %>

    <div>
      <%= @user.rant_frequency.capitalize %> Ranter
    </div>
  </div>
  <div class="user-profile-bio">
    <p>
      <%= @user.bio %>
    </p>
  </div>
  <div class="user-profile-rants">
    <% @user.rants_sorted_by_favorites.each do |rant| %>
      <div class="user-profile-rant">
        <h2><%= rant.subject %></h2>

        <p>
          <%= rant.body %>
        </p>
        <% if rant.get_favorite(current_user) %>
          <%= link_to "#{rant.favorite_count} - Unfavorite", user_rant_favorite_path(rant.user, rant, rant.get_favorite(current_user)), method: :delete, class: "favorite-button" %>
        <% else %>
          <%= link_to "#{rant.favorite_count} - Favorite", user_rant_favorites_path(rant.user, rant), method: :post, class: "favorite-button" %>
        <% end %>
      </div>
    <% end %>
  </div>
</div>