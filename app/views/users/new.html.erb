<div class="reg">
  <h1>Register</h1>
  <%= form_for @user do |f| %>
    <% f.object.errors.full_messages.each do |error| %>
      <div class="errors">
        <%= error %>
      </div>
      <% end %>
    <%= f.label :username %>
    <%= f.text_field :username %>

    <%= f.label :password %>
    <%= f.password_field :password %>

    <%= f.label :first_name %>
    <%= f.text_field :first_name %>

    <%= f.label :last_name %>
    <%= f.text_field :last_name %>

    <%= f.label :bio %>
    <%= f.text_area :bio, rows: "10" %>
    <div class="frequency-container">
    <p>How often do you rant?</p>
    <%= f.radio_button :post_frequency, :daily %>
    <%= f.label :post_frequency_daily, "Daily" %>

    <%= f.radio_button :post_frequency, :weekly %>
    <%= f.label :post_frequency_weekly, "Weekly" %>

    <%= f.radio_button :post_frequency, :monthly %>
    <%= f.label :post_frequency_monthly, "Monthly" %>
    </div>
    <%= f.submit "Register" %>
  <% end %>
</div>