<div class="dashboard-container">
  <div class="left-container">
    <div class="dashboard-user-info">
      <img src="https://pbs.twimg.com/profile_images/479692669505916928/1gNBxBfY.jpeg">

      <h3>
        <%= link_to full_name(@dashboard.user), edit_user_path(@dashboard.user.id) %>
      </h3>
    </div>
    <hr>
    <%= render @dashboard.new_rant %>
  </div>
  <div class="right-container">
      <h1>Latest Rants</h1>
    <hr>
    <div class="rants">
      <% @dashboard.latest_rants.each do |rant| %>
        <div class="rant">
          <div>
            <div class="rant-user-info">
              <h2>
                <%= rant.user.first_name %>
              </h2>
              <img src="https://pbs.twimg.com/profile_images/479692669505916928/1gNBxBfY.jpeg">
              <%= link_to "Follow", class: "follow-button" %>
            </div>
            <p>
              <%= rant.body %>
            </p>
          </div>
          <%= link_to "Favorite" %>
        </div>
      <hr>
      <% end %>
    </div>
    <hr>
      <h1>My Rants</h1>
    <div class="rants">
      <% @dashboard.my_rants.each do |rant| %>
        <div class="rant">
          <div>
            <div class="rant-user-info">
              <h2>
                <%= rant.user.first_name %>
              </h2>
              <img src="https://pbs.twimg.com/profile_images/479692669505916928/1gNBxBfY.jpeg">
            </div>
            <p>
              <%= rant.body %>
            </p>
          </div>
          <%= link_to "Delete", user_rant_path(rant.user, rant), method: :delete %>
        </div>
      <% end %>
    </div>
  </div>
</div>
