<div class="right-container">
  <h1>Latest Rants</h1>
  <hr>
  <div class="rants">
    <% current_user_dashboard.latest_rants.each do |rant| %>
      <div class="rant" id="<%= rant.id %>">
        <div>
          <div class="rant-user-info">
            <h2>
              <%= rant.user.first_name %>
            </h2>
            <img src="https://pbs.twimg.com/profile_images/479692669505916928/1gNBxBfY.jpeg">
            <% if current_user.following?(rant.user.id) %>
              <%= link_to "Unfollow", unfollow_path(rant.user), class: "unfollow-button" %>
            <% else %>
              <%= link_to "Follow", follow_path(rant.user), class: "follow-button" %>
            <% end %>
          </div>
          <%= link_to user_rant_path(rant.user, rant) do %>

              <%= rant.body %>

          <% end %>
        </div>
        <%= link_to "Favorite" %>
      </div>
      <hr class="rant-separator">
    <% end %>
  </div>
  <h1>My Rants</h1>

  <div class="rants">
    <% current_user_dashboard.my_rants.each do |rant| %>
      <div class="rant">
        <div>
          <div class="rant-user-info">
            <h2>
              <%= rant.user.first_name %>
            </h2>
            <img src="https://pbs.twimg.com/profile_images/479692669505916928/1gNBxBfY.jpeg">
          </div>
          <p>
            <%= rant.body %>
          </p>
        </div>
        <%= link_to "Delete", user_rant_path(rant.user, rant), method: :delete %>
      </div>
    <% end %>
  </div>
</div>