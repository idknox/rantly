<!DOCTYPE html>
<html>
<head>
  <title>Rantly</title>
  <%= stylesheet_link_tag 'application', media: 'all' %>
  <%= javascript_include_tag 'application' %>
  <%= csrf_meta_tags %>
</head>
<body>
<header>
  <div class="title">Rant.ly</div>
  <% if current_user %>
    <div class="nav-options">
      <%= link_to "Dashboard" %>
      <%= link_to "Following" %>
      <%= link_to "Favorites" %>
      <%= link_to "Search" %>
    </div>
    <div class="session-buttons">
      <%= link_to "LOGOUT", signout_path %>
    </div>
  <% else %>
    <div class="session-buttons">
      <div><%= link_to "Login", signin_path %></div>
      <%= link_to new_user_path do %>
      <div class="button">Join</div>
      <% end %>
    </div>
  <% end %>
</header>
<% if flash[:notice] %>
  <div class="flash"><%= flash[:notice] %></div>
<% end %>
<div class="main">
  <%= yield %>
</div>
</body>
</html>
